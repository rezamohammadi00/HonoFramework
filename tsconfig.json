{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "strict": true,
    "verbatimModuleSyntax": true,
    "skipLibCheck": true,
    "types": ["node"],
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    //(affer look)
    "outDir": "./dist",
    "rootDir": "./src" // Source directory
  },
  "include": ["src/**/*"], // Include all TypeScript files in 'src'
  "exclude": ["node_modules", "dist"] // Exclude unnecessary folders
}
